# BaconAlgo Execution Engine - Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# MARKET DATA PROVIDERS
# =============================================================================

# Alpha Vantage (https://www.alphavantage.co/)
# Free tier: 25 requests/day
ALPHA_VANTAGE_KEY=

# Finnhub (https://finnhub.io/)
# Free tier: 60 calls/minute
FINNHUB_KEY=

# Twelve Data (https://twelvedata.com/)
# Free tier: 800 requests/day
TWELVE_DATA_KEY=

# Polygon.io (https://polygon.io/)
# Free tier: 5 API calls/minute
POLYGON_KEY=

# =============================================================================
# CRYPTO APIS
# =============================================================================

# Binance API (https://www.binance.com/en/support/faq/360002502072)
BINANCE_KEY=
BINANCE_SECRET=

# CoinGecko (https://www.coingecko.com/en/api)
# Free tier: 10-50 calls/minute
COINGECKO_KEY=

# =============================================================================
# BROKER APIS
# =============================================================================

# Alpaca Trading (https://alpaca.markets/)
# Paper trading URL (default): https://paper-api.alpaca.markets
# Live trading URL: https://api.alpaca.markets
ALPACA_KEY=
ALPACA_SECRET=
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# =============================================================================
# DATABASE & CACHE
# =============================================================================

# Supabase (https://supabase.com/)
SUPABASE_URL=
SUPABASE_KEY=

# Redis (local or cloud)
# Default: redis://127.0.0.1:6379
REDIS_URL=redis://127.0.0.1:6379

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port for the Axum server (default: 8080)
SERVER_PORT=8080

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# SCANNER SETTINGS
# =============================================================================

# Scan interval in seconds (default: 300 = 5 minutes)
SCAN_INTERVAL_SECS=300

# Maximum number of symbols to scan per cycle (default: 100)
SCAN_SYMBOLS_LIMIT=100

# Rate limit: max API calls per minute (default: 60)
RATE_LIMIT_PER_MIN=60

# =============================================================================
# LOGGING
# =============================================================================

# Rust log level: error, warn, info, debug, trace
# Example: execution=debug,tower_http=info
# RUST_LOG=execution=info
